def read_value():
    text = input("Amount (done to finish): ").strip().lower()
    if text == "done":
        return None
    try:
        return float(text.replace(",", "."))
    except ValueError:
        print("Invalid input.")
        return read_value()

def collect(title):
    print(title)
    values = []
    while True:
        v = read_value()
        if v is None:
            break
        values.append(v)
    return values

def main():
    incomes = collect("Enter incomes")
    expenses = collect("Enter expenses")

    total_income = sum(incomes)
    total_expense = sum(expenses)
    balance = total_income - total_expense

    print(f"Income: {total_income:.2f}")
    print(f"Expense: {total_expense:.2f}")
    print(f"Balance: {balance:.2f}")

if __name__ == "__main__":
    main()
